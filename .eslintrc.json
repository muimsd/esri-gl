{
  "extends": ["eslint:recommended"],
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "semi": ["error", "always"],
    "semi-spacing": ["error", {"before": false, "after": true}]
  },
  "ignorePatterns": [
    "dist",
    "docs",
    "*.config.js",
    "**/__tests__/**",
    "coverage/**"
  ],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "env": {
        "browser": true,
        "es2020": true,
        "node": true
      },
      "rules": {
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/semi": ["error", "always"],
        "semi": "off",
        "no-undef": "off"
      }
    }
  ]
}
