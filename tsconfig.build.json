{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types": ["src/types.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/demo/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/*.d.ts"
  ]
}
